{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./src",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": true,
    "skipLibCheck": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "exclude": [
    ".ng_build",
    "node_modules",
    "dist",
    "**/*.shim.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "compilationMode": "partial"
  },
}
